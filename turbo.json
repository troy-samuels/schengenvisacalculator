{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "test": {
      "dependsOn": [],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": [],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:eu-compliance": {
      "dependsOn": [],
      "outputs": []
    },
    "test:date-overlap": {
      "dependsOn": [],
      "outputs": []
    },
    "test:calculator": {
      "dependsOn": [],
      "outputs": []
    },
    "test:payments": {
      "dependsOn": [],
      "outputs": []
    },
    "validate": {
      "dependsOn": ["test", "test:eu-compliance", "test:date-overlap"],
      "outputs": []
    },
    "quality-check": {
      "dependsOn": ["validate", "test:integration", "test:e2e"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}