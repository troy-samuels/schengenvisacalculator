{
  "name": "schengen-calculator-v2",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:dependencies": "turbo build --filter=@schengen/calculator --filter=@schengen/ui --filter=@schengen/payments",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "test:performance": "turbo test:performance",
    "test:security": "turbo test:security",
    "test:accessibility": "turbo test:accessibility",
    "test:eu-compliance": "turbo test:eu-compliance",
    "test:date-overlap": "turbo test:date-overlap",
    "test:calculator": "turbo test:calculator",
    "test:payments": "turbo test:payments",
    "validate": "turbo validate",
    "quality-check": "turbo quality-check",
    "dev:app": "turbo dev --filter=@schengen/app",
    "dev:ui": "turbo dev --filter=@schengen/ui",
    "build:app": "turbo build --filter=@schengen/app",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.55.0",
    "@swc/core": "^1.7.0",
    "@swc/jest": "^0.2.36",
    "@types/node": "^22.18.0",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "k6": "^0.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.7.0"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
